{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Frontend Development Server",
			"type": "shell",
			"command": "cd frontend && npm run dev",
			"isBackground": true,
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Build Frontend for Production",
			"type": "shell",
			"command": "cd frontend && npm run build",
			"group": "build",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Install Frontend Dependencies",
			"type": "shell",
			"command": "cd frontend && npm install",
			"group": "build",
			"problemMatcher": []
		},
		{
			"label": "Preview Production Build",
			"type": "shell",
			"command": "cd frontend && npm run preview",
			"group": "test",
			"dependsOn": "Build Frontend for Production",
			"problemMatcher": []
		}
	]
}